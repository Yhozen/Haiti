/* CSS declarations go here */
crema = rgba(#F3C677, 0.66)
morado = rgba(#EFEFF4, 0.49)
azulmorado = #0D0A3F
azulmoradobg = rgba(azulmorado, 0.71)
amarillo = #FFC400

* 
    box-sizing border-box

html, body 
    padding 0
    min-height 100%
    font-family "Helvetica Neue", Helvetica, Arial, sans-serif;

#wrapper 
    display flex
    align-items center
    justify-content center
    min-height 100vh
    background #93063E
    #main
        background morado
        min-height 100vh
        min-width 75vw
        max-width 76vw

#login
    img 
        width 500px
        display block
        margin 70px auto 10px
    .at-form
        margin 20px
    #sub
        color #555555
        padding 0px 25vw
        p
            text-align center
        margin-bottom 20px
    #botones
        padding 0px 25vw
        .btn-large
            font-weight bold
            display block
            margin-bottom 30px
        p
            font-style oblique

#lenguaje
    padding 100px
    h5  
        color #222222
    a   
        width 49%
        font-weight bold
    img     
        width 500px

.flex
    display: flex;
    flex-wrap: wrap;

#interes
    img     
        width 500px
        display block
    .morado
        background-color azulmorado
        color #FFECAC
        display block
        margin 13px auto
        width 27%

#listaIntereses
    a 
        background-color #F9564F
        flex-grow: 1;
        margin 7px
        width: 30%;
        color white
        text-overflow ellipsis
        white-space nowrap


#azulmorado
    background-color azulmoradobg
    padding 30px
    min-height 100vh
    .textos
        color white
        text-align right

#nav-mobile 
    margin-top 40px
    li
        display inline
        font-style oblique
        a
            background-color amarillo
            color #444
            text-transform none
            min-width 15%
            margin auto 0px
            border-radius: 0

#mainLogo
    height 94px
    float right
    right 14px
    top 10px

#crema
    background-color crema
    padding 30px
    min-height 100vh
    h3
        color white

.somepadding
    padding-left 15px
    padding-right 15px

#profile_pic
    width 200px
    border-radius 50%

.tags
    p
        font-style oblique