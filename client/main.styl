morado = rgba(#EFEFF4, 0.49)
azulmorado = #007268
azulmoradobg = rgba(azulmorado, 0.71)
amarillo = #FFC400
rojo = #bf1f1f

.rojo
    background-color rojo !important
.crema
    background-color crema !important
.azulmorado
    background-color azulmorado !important
.azulmoradobg
    background-color azulmoradobg !important
.morado
    background-color morado !important
